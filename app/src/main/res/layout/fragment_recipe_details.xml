<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/material_button_flat_background_color_pressed_light_theme"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/material_card_edge_margin"
        android:elevation="@dimen/material_card_elevation_resting"
        app:cardCornerRadius="@dimen/material_card_corner_radius"
        app:cardBackgroundColor="@color/colorPrimaryLight"
        tools:targetApi="lollipop">

        <TextView
            android:id="@+id/recipe_details_ingredients"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/material_card_title_block_padding"
            android:paddingEnd="@dimen/material_card_title_block_padding"
            android:paddingTop="@dimen/material_card_title_block_padding"
            android:paddingBottom="@dimen/material_card_title_block_padding"
            android:textSize="@dimen/material_card_supporting_text_size"
            tools:text="Ingredients list: \nItem1 \nItem2" />

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recipe_details_steps"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/material_card_edge_margin" />
</LinearLayout>