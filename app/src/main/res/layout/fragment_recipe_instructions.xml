<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/list_step_layout"
    android:layout_width="match_parent"
    android:layout_height="@dimen/material_list_single_line_without_avatar_normal_height"
    android:orientation="vertical"
    tools:ignore="UseCompoundDrawables">

    <ImageView
        android:id="@+id/list_step_video_icon"
        android:layout_width="@dimen/material_list_icon_size"
        android:layout_height="@dimen/material_list_icon_size"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="@dimen/material_list_text_margin_end"
        android:layout_marginEnd="@dimen/material_list_text_margin_end"
        android:layout_marginStart="@dimen/material_list_text_margin_end"
        android:layout_marginTop="@dimen/material_list_text_margin_end"
        android:tint="@color/colorMaterialAmber900"
        app:srcCompat="@drawable/ic_play_arrow_white_24dp"
        tools:ignore="ContentDescription"/>

    <TextView
        android:id="@+id/list_step_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/material_list_text_first_position_margin_start"
        android:layout_toEndOf="@+id/list_step_video_icon"
        android:textSize="@dimen/material_list_normal_primary_text_size"
        tools:ignore="RelativeOverlap"
        tools:text="Recipe Introduction" />

</RelativeLayout>